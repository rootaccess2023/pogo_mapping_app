<main class="h-screen flex justify-center items-center bg-slate-900 text-white">
  <div class="h-fit w-full min-w-[22rem] max-w-[30rem] flex flex-col bg-slate-800 p-8 gap-4 mx-auto rounded">
    <h2 class="font-bold text-center text-3xl">Welcome back</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field pb-4">
        <%= f.label :email, class: "font-bold mb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your email", class: "w-full rounded p-1 text-black" %>
      </div>

      <div class="field pb-4">
        <%= f.label :password, class: "font-bold mb-2" %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter password", class: "w-full rounded p-1 text-black" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field pb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "font-bold" %>
        </div>
      <% end %>

      <div class="actions bg-yellow-400 hover:bg-yellow-500 cursor-pointer font-bold text-center p-2 rounded-sm text-black">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>