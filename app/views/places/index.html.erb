<main class="flex flex-col relative z-1" data-controller="dropdown">
    <div class="flex flex-col-reverse md:flex-row flex-1">
        <div class="md:h-screen bg-gray-600 p-2">
            <%= render "places/sidebar" %>
        </div>
        <div data-dropdown-target="details" class="hidden w-full max-w-[24.5rem] md:w-[26.5rem] md:block bg-gray-200">
            <%= render "places/index_details" %>
        </div>
        <div class="flex-1">
            <%= render "places/map", places:@places %>
        </div>
    </div>
</main>

